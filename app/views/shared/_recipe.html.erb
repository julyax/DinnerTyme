<div class="recipe">
	<div class="photo"><%= link_to image_tag(recipe.photo.url), recipe_path(recipe) %></div>
	<div class="info">
	    <div class="name"><%= recipe.name %></div>
		<div class="links">
			<%= link_to image_tag('icons/wrench_orange.png'), edit_recipe_path(recipe) %>
			<%= link_to image_tag('icons/delete.png'), recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
	</div>
	<div class="clear"></div>
</div>